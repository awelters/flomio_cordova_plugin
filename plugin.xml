<?xml version="1.0" encoding="UTF-8"?>

<plugin xmlns="http://cordova.apache.org/ns/plugins/1.0"
    id="com.flomio.sdk"
    version="0.1.0">
    <name>Flomio SDK Integration</name>
    <description>Integrates with Flomio SDK to enable NFC, BLE, and UHF RFID reader hardware.</description>
    <!-- ios -->
    <platform name="ios">    
        <config-file target="config.xml" parent="/*">
            <feature name="FlomioPlugin">
                <param name="ios-package" value="FlomioPlugin" /> 
            </feature>
        </config-file>
        <js-module src="www/FlomioPlugin.js" name="FlomioPlugin">
            <clobbers target="floPlugin" />
        </js-module>
        <header-file src="src/ios/FlomioPlugin.h" />
		<source-file src="src/ios/FlomioPlugin.m" />
    </platform>
</plugin>
